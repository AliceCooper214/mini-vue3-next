{
	"compilerOptions": {
    "forceConsistentCasingInFileNames": true,
		"rootDir": ".",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "es5",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"noImplicitAny": false,
		"module": "esnext",
		"removeComments": false,
		"sourceMap": false,
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
      "@vue/*": ["packages/*/src"]
    }
	},
	// 入口
	"include": [
		"packages/*/src"
	]
}